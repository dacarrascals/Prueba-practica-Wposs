<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/gradientebackground">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <TextView
            android:layout_marginTop="100dp"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:text="RECARGAS WEB"
            android:textSize="33sp"
            android:textStyle="bold"
            android:textColor="#000000"
            >

        </TextView>

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/relativ1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <EditText
            android:layout_marginTop="30dp"
            android:background="@drawable/background_edit_text"
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#FFFFFF"
            android:hint="Usuario"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"

            >
        </EditText>

        <EditText
            android:inputType="textPassword"
            android:background="@drawable/background_edit_text"
            android:layout_marginTop="10dp"
            android:id="@+id/password"
            android:textColorHint="#FFFFFF"
            android:layout_below="@id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ContraseÃ±a"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"

            >
        </EditText>


        <Button
            android:id="@+id/ingresar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/password"
            android:layout_marginStart="70dp"
            android:layout_marginTop="27dp"
            android:layout_marginEnd="70dp"
            android:background="@drawable/background_button"

            android:text="INGRESAR"
            app:backgroundTint="#003B70">

        </Button>

        <TextView
            android:id="@+id/or"
            android:gravity="center"
            android:layout_marginTop="25dp"
            android:layout_below="@id/ingresar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:text="_______________   Or   _______________"
            android:textSize="16dp">

        </TextView>

        <Button
            android:id="@+id/registrarcuenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/or"
            android:layout_marginStart="70dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="70dp"
            android:background="@drawable/background_button"
            android:backgroundTint="#d9261c"
            android:text="REGISTRAR CUENTA"
            app:backgroundTint="#D9261C">

        </Button>

    </RelativeLayout>



</RelativeLayout>